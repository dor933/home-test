FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (use regular install to ensure optionalDependencies work)
RUN npm ci

# Copy source code
COPY . .

RUN npm run build

# Expose Vite dev server port
EXPOSE 5173

# Run dev server with host flag for Docker
CMD ["npm", "run", "dev"]