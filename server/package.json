{
  "name": "vacation-management-server",
  "version": "1.0.0",
  "description": "REST API for Vacation Management System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run db:migrate && npm run db:seed && node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run db:migrate && npm run db:seed && npm run build && node dist/index.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "tsc --watch & NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "keywords": [
    "vacation",
    "management",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.0",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "zod": "^3.25.67"
  }
}
